<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:YourDrink" x:Class="YourDrink.DrinkPage">
         <ContentPage.Resources>
        <ResourceDictionary>
          
            <local:Base64ImageConverter x:Key="Base64ToImage" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ListView x:Name="DrinkList" SelectionMode="None" ItemTapped="DrinkList_ItemTapped" >
             <ListView.ItemTemplate>

                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                       
                           <Grid  >
                                     <Image BackgroundColor="LightSlateGray" Aspect="AspectFill" Source="{Binding Image, Converter={x:StaticResource Base64ToImage}}" />
                      <Label BackgroundColor="Transparent" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="FloralWhite" FontSize="Large" FontAttributes="Bold" x:Name="DrinkButton" Text="{Binding Name}"   />
                               
                         
                           </Grid>
                    
                        
                        </ViewCell.View>

                    </ViewCell>

                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
